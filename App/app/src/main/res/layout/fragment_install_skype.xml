<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="northseattlecollege.ASLBuddy.fragments.InstallSkypeFragment">

    <LinearLayout
        android:id="@+id/layout_install_skype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/label_skype_check"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_install_skype"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/label_install_skype"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
